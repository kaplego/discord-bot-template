{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "./source",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "out",
        "inlineSources": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}